<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main6Activity"
    android:background="@drawable/bg1"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_edit_location_black_24dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="35dp"
        android:id="@+id/image1"
        />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_location_on_black_24dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:layout_below="@id/image1"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_rect_text"
        android:id="@+id/textView"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="From where?"
        android:textColor="@color/Black"
        android:layout_marginLeft="130dp"
        android:gravity="center"

        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinnerka"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="100dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_access_time_black_24dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="50dp"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/spinner"
        android:text="time slot"
        android:textSize="15dp"
        android:background="@drawable/bg_rect_text"
        android:layout_marginTop="30dp"
        android:textColor="@color/Black"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="304dp"
        android:layout_marginLeft="130dp"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinnerka"
        android:layout_marginLeft="100dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_pin_circle_black_24dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="50dp"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Need of"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="435dp"
        android:background="@drawable/bg_rect_text"
        android:layout_marginTop="30dp"
        android:textColor="@color/Black"
        android:layout_below="@+id/spinner2"
        android:layout_marginLeft="130dp"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinnerka"/>


    <Button
        android:id="@+id/findbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:textColor="@color/white"
        android:background="@drawable/bg_text"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="560dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/spinner3"
        android:layout_marginLeft="140dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:layout_marginLeft="300dp"
        android:clickable="true">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:src="@drawable/ic_power_settings_new_black_24dp"
        android:layout_marginLeft="300dp"
        android:clickable="true">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>



</RelativeLayout>
</ScrollView>
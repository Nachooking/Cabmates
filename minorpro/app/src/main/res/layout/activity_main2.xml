<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:layout_height="800dp"
    android:layout_width="match_parent"
    >



    <TextView android:background="@drawable/bg_text"
        android:layout_height="57dp"
        android:layout_width="300dp"
        android:textSize="20dp"
        android:textColor="#FF9100"
        android:text="Login From Here!!"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="97dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="30dp"
        android:id="@+id/textviewemail"/>


    <EditText android:background="@drawable/bg_rect_text"
        android:layout_height="wrap_content"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/emaildit1"
        android:layout_below="@+id/textviewemail"
        android:textColorHint="#666666"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:padding="6dp"


        />



    <EditText
        android:background="@drawable/bg_rect_text"
        android:layout_height="wrap_content"
        android:layout_width="320dp"
        android:layout_marginTop="25dp"
        android:id="@+id/emaildit2"
        android:layout_centerHorizontal="true"
        android:textColorHint="#666666"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:layout_below="@+id/emaildit1"
        android:padding="6dp"/>


    <Button android:background="@drawable/bg_rect_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#FF9100"
        android:text="Login"
        android:gravity="center"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/emaildit2"
        android:id="@+id/tvLogin"
        android:padding="20dp"
        android:backgroundTint="#000000"/>



        <Button
            android:id="@+id/tvNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rect_text"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:text="New User?"
            android:layout_below="@id/tvLogin"
            android:textColor="#000000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/bg_rect_text"
            android:padding="10dp"
            android:layout_below="@id/tvLogin"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="100dp"
            android:layout_toRightOf="@id/tvNewUser"
            android:text="Forgot Password"
            android:textColor="#000000"
            android:textSize="13sp" />


</RelativeLayout>
</ScrollView>